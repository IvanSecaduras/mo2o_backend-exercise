{% extends 'base.html.twig' %}

{% block title %}Buscador de recetas{% endblock %}

{% block content %}

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_row(form.buscador) }}
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-secondary">Buscar</button>
    </div>

    {{ form_end(form) }}

    {% if respuesta is defined %}
        <h1>Resultado:</h1>
        <code>{{ respuesta['results']|json_encode(constant('JSON_PRETTY_PRINT'))|raw }}</code>
    {% endif %}

{% endblock %}
